        <!-- JavaScript for handling reset password -->
        <script>


            //reset password
            function sendResetPasswordEmail() {
                var resetEmail = document.getElementById('resetEmail').value;
                var resetMessageElement = document.getElementById('resetMessage');

                // Validate email format
                let emailPattern = /^\s*[A-Za-z0-9]*[@](gmail)*[\.](com)\s*$/;

                if (!emailPattern.test(resetEmail)) {
                    resetMessageElement.innerHTML = " Please enter a valid email address.";
                    resetMessageElement.style.color = "red";
                    return;
                }

                // Add your logic to send a reset password email here
                // For demonstration, show different messages for correct and incorrect emails
                if (resetEmail === "correct@example.com") {
                    resetMessageElement.innerHTML = "Reset password link sent to your email.";
                } else {
                    resetMessageElement.innerHTML = "Email not found. Please enter a registered email address.";
                }

                // Optionally, you may want to use AJAX to send a request to the server for processing
            }
        </script>