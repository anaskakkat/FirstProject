    <script>
        function handleFormSubmission(event) {
            event.preventDefault(); // Prevent the default form submission behavior

            // Perform any additional validation or actions here

            // Submit the form data asynchronously using Fetch API
            fetch('https://script.google.com/macros/s/AKfycbz2Iqg_IwvvIquFoKjNwNOoeLNntif8gVlfCvYVW2BPpp1JU2RQlZIXGXgQIX6ItyN5XA/exec', {
                method: 'POST',
                body: new FormData(event.target)
            })
                .then(response => {
                    if (response.ok) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Form submitted successfully',
                            showConfirmButton: false,
                            timer: 1500
                        }).then(() => {
                            location.reload(true); // Reload the page
                        });
                    } else {
                        alert('Form submission failed'); // Display error message
                    }
                })
                .catch(error => {
                    console.error('Error submitting form:', error);
                    alert('Form submission failed'); // Display error message
                });
        }
    </script>


