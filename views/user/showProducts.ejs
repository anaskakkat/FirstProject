<style>
    .sort-options {
        display: inline-block;
        margin-right: 20px;
        /* Adjust margin as needed */
    }

    label {
        font-weight: bold;
        margin-right: 8px;
    }

    select {
        padding: 8px;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 4px;
        cursor: pointer;
    }

    select:focus {
        outline: none;
        border-color: #3498db;
        /* Change focus border color as desired */
    }
</style>

<%- include('./layouts/header') %>

    <div class="banner-top">
        <div class="container">
            <h1>Shop</h1>
            <em></em>
            <h2><a href="/">Home</a><label>/</label>Shop</h2>
        </div>
    </div>
    <!--content-->
    <div class="product">
        <div class="container">
            <div class="col-md-9">
                <div class="mid-popular">
                    <% proDatas.forEach(products=> { %>
                        <div class="col-md-4  item-grid1 simpleCart_shelfItem">
                            <!-- Your existing product rendering code goes here -->
                            <div class=" mid-pop col-lg-12">
                                <div class="pro-img">
                                    <a href="/showProducts/singleProducts?id=<%=products._id  %>"><img
                                            src="/<%= products.images[0] %>" class="img-responsive" alt=""></a>

                                </div>
                                <div class="mid-1">
                                    <div class="women">
                                        <div class="women-top">
                                            <span>
                                                <%=products.category%>
                                            </span>
                                            <h6><a href="/showProducts/singleProducts/<%=products._id %>">
                                                    <%=products.productName%>
                                                </a></h6>
                                        </div>
                                        <div class="img item_add">
                                            <a href="#"><img src="" alt=""></a>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="mid-2">
                                        <p><label>â‚¹</label><em class="item_price">
                                                <%=products.price%>
                                            </em></p>
                                        <div class="block">
                                            <div class="starbox small ghosting"> </div>
                                        </div>

                                        <div class="clearfix"></div>
                                    </div>

                                </div>

                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>

            <div class="col-md-3 product-bottom">
                <!--categories-->
                <div class=" rsidebar span_1_of_left">
                    <h4 class="cate">Categories</h4>
                    <ul class="menu-drop">
                        <% proCat.forEach(category=> { %>
                            <a class="fw-5" href="/catShowProducts/<%= category.categoryName %>"
                                style="color: black; font-weight: bold;">
                                <%= category.categoryName %>
                            </a>
                            <li class="item1"></li>
                            <% }) %>
                    </ul>


                </div>
                <br><br>
                <div class="sort-options">
                    <label for="sort" style="color: #F67777;">Sort by:</label>
                    <select id="sort" onchange="changeSort(this.value)">
                        <option value="default" <%=sortBy==='default' ? 'selected' : '' %>>Featured</option>
                        <option value="priceHigh" <%=sortBy==='priceHigh' ? 'selected' : '' %>>Price: High to Low
                        </option>
                        <option value="priceLow" <%=sortBy==='priceLow' ? 'selected' : '' %>>Price: Low to High</option>
                        <option value="newest" <%=sortBy==='newest' ? 'selected' : '' %>>Newest Arrivals</option>
                    </select>
                </div>

                <!--initiate accordion-->
                <script type="text/javascript">
                    $(function () {
                        var menu_ul = $('.menu-drop > li > ul'),
                            menu_a = $('.menu-drop > li > a');
                        menu_ul.hide();
                        menu_a.click(function (e) {
                            e.preventDefault();
                            if (!$(this).hasClass('active')) {
                                menu_a.removeClass('active');
                                menu_ul.filter(':visible').slideUp('normal');
                                $(this).addClass('active').next().stop(true, true).slideDown('normal');
                            } else {
                                $(this).removeClass('active');
                                $(this).next().stop(true, true).slideUp('normal');
                            }
                        });

                    });

                    // -------------------- 
                    function changeSort(sortBy) {
                        // Redirect to the same page with the updated sort parameter
                        window.location.href = `/showProducts?sortBy=${sortBy}`;
                    }
                </script>
                <!--//menu-->


            </div>
            <div class="clearfix"></div>
        </div>
        <!--products-->

        <!--//products-->
        <!--brand-->


    </div>

    <%- include('./layouts/footer') %>