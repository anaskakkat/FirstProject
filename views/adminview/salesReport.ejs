<%- include('./layouts/adminHeader') %>




    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Sales Report</h2>
            </div>
        </div>
        <div class="card">
            <header class="card-header">
                <div class="row align-items-center">
                    <div class=" col-md-8 mb-lg-0 mb-15" style="display: flex;">
                        <div class="col-lg-4 col-6" style="margin-right: 10px;">
                            <span style="display: flex;">From: &nbsp;</span> <input type="date" class="form-control"
                                name="" />
                        </div>
                        <div class="col-lg-4 col-6">
                            <span>To: &nbsp;</span> <input type="date" class="form-control" name="" />
                        </div>


                    </div>
                    <div class=" col-md-4 ms-auto text-md-end">

                        <!-- <a class="btn btn-primary print ms-2" href="#"><i class="icon material-icons md-print"></i></a> -->
                    </div>
                </div>
            </header>
            <!-- card-header end// -->
            <div class="card-body">

                <!-- row // -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th width="17%">OrderId</th>
                                        <th width="30%">Delivery Address</th>
                                        <th width="30%">Products</th>
                                        <th width="10%">Amount</th>
                                        <th width="10%">Total Products</th>
                                        <th width="10%">Order Date</th>
                                        <th width="10%">Payment</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <% orders.forEach(order=> { %>

                                        <tr>
                                            <td>
                                                #<%=order.orderId %>
                                            </td>
                                            <td>
                                                <%=order.delivery_address %>
                                            </td>


                                            <td>
                                                <% order.items.forEach(item=> { %>
                                                    <%= item.productId.productName %> <br>
                                                        <% }); %>
                                            </td>

                                            <td>
                                                <%=order.total_amount %>
                                            </td>
                                            <td>
                                                <%= order.totalProductsCount %>
                                            </td>

                                            <td>
                                                <%=order.date %>
                                            </td>
                                            <td>
                                                <%=order.payment %>
                                            </td>
                                        </tr>
                                        <% }); %>

                                            <td colspan="8">
                                                <article class="float-end">
                                                    <dl class="dlist">
                                                        <dt>Product Sold:</dt>
                                                        <dd>
                                                            <%= totalQty %>
                                                        </dd>
                                                    </dl>
                                                    <dl class="dlist">
                                                        <dt>Total Revenue:</dt>
                                                        <dd>â‚¹<%= totalAmount %>
                                                        </dd>
                                                    </dl>


                                                </article>
                                            </td>
                                            </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- table-responsive// -->
                    </div>
